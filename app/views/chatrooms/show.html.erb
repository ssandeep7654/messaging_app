<p style="color: green"><%= notice %></p>

<%= render @chatroom %>

<div>
  <%= link_to "Edit this chatroom", edit_chatroom_path(@chatroom) %> |
  <%= link_to "Back to chatrooms", chatrooms_path %>

  <%= button_to "Destroy this chatroom", @chatroom, method: :delete %>
</div>

<h3>============================</h3>

<p>
  <strong>Name:</strong>
  <%= @chatroom.name %>
</p>

<div data-behavior='messages' class="">
  <% @messages.each do |message| %>
    <div class="">
      <strong><%= message.user.first_name %>:</strong><%= message.body %>
    </div>
  <% end %>
</div>

<div class="">
  <%= form_for [@chatroom, Message.new], remote: true do |f| %>
    <%= f.text_area :body, rows: 1, class: "", autofocus: true %>
    <%= f.submit "Send", class: "" %>
  <% end %>
</div>
